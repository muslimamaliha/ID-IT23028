<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="15" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.ScoreController">
    <Text fx:id="scoreText" text="Your Score" style="-fx-font-size: 20;"/>
    <Button text="Play Again" onAction="#handlePlayAgain"/>
    <Button text="Back" onAction="#handleBack"/>
    <Button text="Exit" onAction="#handleExit"/>
</VBox>